{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2021",
    "lib": ["ES2021"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src"]
}
